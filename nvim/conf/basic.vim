" basic config

let mapleader=" "

" ui
set number
set cursorline
set list
set listchars="tab:>-,trail:-"

" control
filetype plugin indent on
set mouse=a
set clipboard+=unnamedplus

" typing
set shiftwidth=4
set tabstop=4
set smarttab
set smartindent
set expandtab

" file
set autoread
set autowrite

